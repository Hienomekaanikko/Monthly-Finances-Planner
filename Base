import pandas
print("This is your yearly income summary!")
bills = {}
#Phone
print("Type the phone bill:")
phoneBill = input()
phoneBill = int(phoneBill)
print("The average phonebill is " + str(phoneBill) + " €.")
bills["Phone"] = phoneBill

#Adding the Phone Bills to the dictionary
bills.update({"Phone": phoneBill})
print("Updated bills list.", bills)

#Internet
print("Type the internet bill:")
internetBill = input()
internetBill = int(internetBill)
print("The average internetbill is " + str(internetBill) + " €.")
bills["Internet"] = internetBill
#Adding the Internet Bills to the dictionary
bills.update({"Internet": internetBill})

#Adding the Internet to the dictionary
bills.update({"Internet": internetBill})
print("Updated bills list.", bills)

#Rent
print("Type the rent bill:")
rentBill = input()
rentBill = int(rentBill)
print("The average rent is " + str(rentBill) + " €.")
bills["Rent"] = rentBill
#Adding the Rent Bills to the dictionary
bills.update({"Rent": rentBill})

#Adding the Rent to the dictionary
bills.update({"Rent": rentBill})
print("Updated bills list.", bills)

#Monthly payments
print("Type the monthly payments combined:")
monthlyBill = input()
monthlyBill = int(monthlyBill)
print("The average monthly payments are " + str(monthlyBill) + " €.")
bills["MonthlyBill"] = monthlyBill
#Adding the Monthly Payment Bills to the dictionary
bills.update({"Monthly Bills": monthlyBill})

#Adding the Monthly Payments to the dictionary
bills.update({"Monthly Payments": monthlyBill})
print("Updated bills list.", bills)

#Bills combined
billsCombined = sum(bills.values())
print("Bills combined is " + str(billsCombined) + " €.")

